<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mumbaiengineers.beta_app.AoaHome"
    android:background="@color/colorPrimaryLight">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Analysis of Algorithms"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="70">

        <Button
            android:id="@id/aoaTheory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="12.5"
            android:text="Theory"
            android:background="@drawable/background"
            android:textSize="20sp">
        </Button>

        <Button
            android:id="@id/aoaPractical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="12.5"
            android:text="Practical"
            android:background="@drawable/background"
            android:textSize="20sp">
        </Button>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="40"
        android:elevation="1dp"
        android:background="@drawable/mfaback"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@id/mfaTextAoa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_margin="5dp"
            android:background="@color/colorPrimary"
            android:text="Most frequently asked questions"
            android:elevation="4dp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mfaTextAoa">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@id/aoaTheoryQ1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textSize="16sp"
                    android:text="Q1. Explain Big-Oh, Omega and Theta notation with the help of diagram."
                    android:textColor="#000000"
                    android:elevation="2dp"
                    android:background="@drawable/rectangle">

                </TextView>

                <TextView
                    android:id="@id/aoaTheoryQ4"
                    android:background="@drawable/rectangle"
                    android:layout_margin="5dp"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/aoaTheoryQ1"
                    android:text="Q2. Explain 0/1 Knapsack problem"
                    android:elevation="2dp"
                    android:textColor="#000000">

                </TextView>

                <TextView
                    android:id="@id/aoaTheoryQ5"
                    android:background="@drawable/rectangle"
                    android:layout_margin="5dp"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/aoaTheoryQ4"
                    android:textColor="#000000"
                    android:text="Q3. Explain flow shop scheduling with example."
                    android:elevation="2dp">

                </TextView>

                <TextView
                    android:id="@id/aoaTheoryQ12"
                    android:background="@drawable/rectangle"
                    android:textColor="#000000"
                    android:layout_margin="5dp"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/aoaTheoryQ5"
                    android:text="Q4. Explain N-Queen problem using backtracking with algorithm."
                    android:elevation="2dp">

                </TextView>

                <TextView
                    android:id="@id/aoaTheoryQ6"
                    android:background="@drawable/rectangle"
                    android:textColor="#000000"
                    android:layout_margin="5dp"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/aoaTheoryQ12"
                    android:text="Q5. Explain Prim's Algorithm with example."
                    android:elevation="2dp">

                </TextView>

                <TextView
                    android:id="@id/aoaTheoryQ2"
                    android:background="@drawable/rectangle"
                    android:textColor="#000000"
                    android:layout_margin="5dp"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/aoaTheoryQ6"
                    android:text="Q6. Explain three cases of master method."
                    android:elevation="2dp">

                </TextView>

                <TextView
                    android:id="@id/aoaTheoryQ10"
                    android:background="@drawable/rectangle"
                    android:textColor="#000000"
                    android:layout_margin="5dp"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/aoaTheoryQ2"
                    android:text="Q7. Write a note on all pair shortest path algorithm."
                    android:elevation="2dp">

                </TextView>

            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>

</LinearLayout>
