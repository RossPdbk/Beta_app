<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryLight"
    tools:context="com.mumbaiengineers.beta_app.osHome">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Operating System"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="70">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:elevation="4dp"
            android:layout_weight="12.5"
            android:background="@drawable/background"
            android:id="@id/osTheory">

        </Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:elevation="4dp"
            android:layout_weight="12.5"
            android:id="@id/osPractical"
            android:background="@drawable/background">
        </Button>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="40"
        android:elevation="1dp"
        android:background="@drawable/mfaback"
        android:layout_margin="5dp"
        android:orientation="vertical">


        <TextView
            android:id="@id/mfaTextOs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_margin="7dp"
            android:background="@color/colorPrimary"
            android:text="Most frequently asked questions"
            android:elevation="4dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mfaTextOs"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@id/osMfaQ1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle"
                    android:textSize="16sp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginBottom="7dp"
                    android:textColor="@color/black"
                    android:text="Q1. Explain Critical section problem.">
                </TextView>

                <TextView
                    android:id="@id/osMfaQ2"
                    android:layout_below="@id/osMfaQ1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginBottom="7dp"
                    
                    android:text="Q2. What are various services provided by OS?" >

                </TextView>

                <TextView
                android:id="@id/osMfaQ3"
                android:layout_below="@id/osMfaQ2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle"
                android:textSize="16sp"

                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginBottom="7dp"

                android:textColor="@color/black"
                android:text="Q3.  What are different page replacement policies?"> 
                </TextView>

                <TextView
                    android:id="@id/osMfaQ4"
                    android:layout_below="@id/osMfaQ3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle"
                    android:textSize="16sp"

                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginBottom="7dp"

                    android:textColor="@color/black"
                    android:text="Q4.  Explain Banker's algorithm in details.">
                </TextView>

                <TextView
                    android:id="@id/osMfaQ5"
                    android:layout_below="@id/osMfaQ4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle"
                    android:textSize="16sp"

                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginBottom="7dp"

                    android:textColor="@color/black"
                    android:text="Q5.Explain Dining Philosopher problem and it's Solution.">
                </TextView>

                <TextView
                    android:id="@id/osMfaQ6"
                    android:layout_below="@id/osMfaQ5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle"
                    android:textSize="16sp"

                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginBottom="7dp"

                    android:textColor="@color/black"
                    android:text="Q6. What is deadlock? Explain necessary and sufficient condition for deadlock to occur. Explain deadlock avoidance, prevention and detection.">
                </TextView>

                <TextView
                    android:id="@id/osMfaQ7"
                    android:layout_below="@id/osMfaQ6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle"
                    android:textSize="16sp"

                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginBottom="7dp"
                    
                    android:textColor="@color/black"
                    android:text="Q7. Explain Internal and External Fragmentation">
                    
                </TextView>

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</LinearLayout>
