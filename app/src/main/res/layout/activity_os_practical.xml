<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mumbaiengineers.beta_app.osPractical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@id/osPracticalP1"

            android:text="P1">
        </Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@id/osPracticalP2"
            android:layout_below="@id/osPracticalP1"
            android:text="P2">
        </Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@id/osPracticalP3"
            android:layout_below="@id/osPracticalP2"
            android:text="P3">
        </Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@id/osPracticalP4"
            android:layout_below="@id/osPracticalP3"
            android:text="P4">
        </Button>

    </RelativeLayout>

</ScrollView>
