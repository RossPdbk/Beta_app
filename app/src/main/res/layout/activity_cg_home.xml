<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryLight"
    tools:context="com.mumbaiengineers.beta_app.cgHome">

    <android.support.v7.widget.Toolbar
        android:id="@id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Computer Graphics"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"/>
</android.support.v7.widget.Toolbar>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="70">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="12.5"
            android:id="@id/cgTheory"
            android:background="@drawable/mfaback"
            android:src="@drawable/icon_theory"
            />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="12.5"
            android:background="@drawable/mfaback"
            android:id="@id/cgPractical"
            android:src="@drawable/icon_practical"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="40"
        android:elevation="1dp"
        android:background="@drawable/mfaback"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_margin="5dp"
            android:background="@color/colorPrimary"
            android:text="Most frequently asked questions"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:elevation="4dp"
            android:id="@id/mfaTextCg"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mfaTextCg"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:background="@drawable/rectangle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginBottom="7dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:id="@id/cgTheoryQ1"
                    android:text="Q1.Explain diffrence between Random Scan and Raster Scan"
                    android:elevation="1dp"
                    >
                </TextView>

                <TextView
                    android:background="@drawable/rectangle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginBottom="7dp"
                    android:elevation="1dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:id="@id/cgTheoryQ5"
                    android:layout_below="@id/cgTheoryQ1"
                    android:text="Q2.Explain Mid-point circle algorithm.Using same,plot the circle whose radius is 10 units"
                    >
                </TextView>

                <TextView
                    android:background="@drawable/rectangle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                   android:elevation="1dp"
                    android:textSize="16sp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginBottom="7dp"
                    android:textColor="@color/black"
                    android:id="@id/cgTheoryQ8"
                    android:layout_below="@id/cgTheoryQ5"
                    android:text="Q3.Derive matrix for 2D rotation about an arbitary axis.">
                </TextView>

                <TextView
                    android:background="@drawable/rectangle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                   android:elevation="1dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginBottom="7dp"
                    android:id="@id/cgTheoryQ9"
                    android:layout_below="@id/cgTheoryQ8"
                    android:text="Q4.Define window and viewport and derive window to viewport transformation.">
                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:background="@drawable/rectangle"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="7dp"
                    android:textSize="16sp"
                    android:layout_marginRight="7dp"
                    android:layout_marginBottom="7dp"
                   android:elevation="1dp"
                    android:textColor="@color/black"
                    android:id="@id/cgTheoryQ11"
                    android:layout_below="@id/cgTheoryQ9"
                    android:text="Q5.Explain Parallel and Perspective projecton and derive matrix for them.">
                </TextView>

                <TextView
                    android:background="@drawable/rectangle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                   android:elevation="1dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginBottom="7dp"
                    android:id="@id/cgTheoryQ16"
                    android:layout_below="@id/cgTheoryQ11"
                    android:text="Q6.prove that two succesive rotations are addivtive.">
                </TextView>

                <TextView
                    android:background="@drawable/rectangle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                   android:elevation="1dp"
                    android:textSize="16sp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginBottom="7dp"
                    android:textColor="@color/black"
                    android:id="@id/cgTheoryQ14"
                    android:layout_below="@id/cgTheoryQ16"
                    android:text="Q7.Define halftoning and dithering techniques.">
                </TextView>

            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>

</LinearLayout>
