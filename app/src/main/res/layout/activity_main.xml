<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECEFF1"
    android:orientation="vertical"
    tools:context="com.mumbaiengineers.beta_app.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/home"
        android:layout_alignParentTop="true"
        android:scaleType="fitStart"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="50">

        </RelativeLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="10dp"
        android:background="@drawable/mfaback"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_weight="40">

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="25">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="12.5"
                android:background="@drawable/topleft"
                android:id="@id/btn_aoa"
                android:text="AOA">

                <ImageView
                    android:id="@id/aoaicon"
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:layout_centerInParent="true"
                    app:srcCompat="@drawable/icon_aoa" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Analysis of Algorithm"
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_below="@id/aoaicon"
                    android:gravity="center"/>

            </RelativeLayout>

                <RelativeLayout
                    android:id="@id/btn_coa"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="12.5"
                    android:background="@drawable/topright"
                    android:text="COA">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:text="Computer organization &amp; Architecture"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="25">

            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
                android:layout_weight="12.5"
                android:id="@id/btn_os"
                android:background="@drawable/bottomleft"
                android:text="OS">

                <ImageView
                    android:id="@id/osicon"
                    android:layout_width="110dp"
                    android:layout_height="70dp"
                    app:srcCompat="@drawable/osicon"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Operating System"
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_below="@id/osicon"
                    android:gravity="center"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="12.5"
                android:id="@id/btn_cg"
                android:background="@drawable/bottomright"
                android:text="CG">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Computer Graphics"
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"/>

            </RelativeLayout>


        </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="80"
            >
        </LinearLayout>

    </LinearLayout>



</RelativeLayout>
